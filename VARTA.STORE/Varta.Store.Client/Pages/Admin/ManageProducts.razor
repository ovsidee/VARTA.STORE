        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    ::deep .mud-table-cell {
        color: #e0e0e0 !important;
    }

    ::deep .mud-table-row:hover {
        background-color: rgba(255,152,0,0.05) !important;
    }
</style>
