@page "/admin/servers"
@using Varta.Store.Shared
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16 pt-8">
    <div class="d-flex justify-space-between align-center mb-4">
        <MudText Typo="Typo.h4">Manage Servers</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" OnClick="AddServer">Add Server</MudButton>
    </div>

    @if (_loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" Class="d-flex mx-auto" />
    }
    else
    {
        <MudTable Items="_servers" Hover="true" Striped="true" Elevation="4">
            <HeaderContent>
                <MudTh>ID</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>IP Address</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="ID">@context.Id</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="IP Address">@context.IpAddress</MudTd>
                <MudTd DataLabel="Actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => EditServer(context))" Title="Edit" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => DeleteServer(context))" Title="Delete" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    }
</MudContainer>

@code {
    private List<ServerTag> _servers = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadServers();
    }

    private async Task LoadServers()
    {
        _loading = true;
        try
        {
            _servers = await Http.GetFromJsonAsync<List<ServerTag>>("api/servertags") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading servers: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AddServer()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<Varta.Store.Client.Pages.Admin.Dialogs.ServerDialog>("Add Server", options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadServers();
        }
    }

    private async Task EditServer(ServerTag server)
    {
        var parameters = new DialogParameters { ["Server"] = server };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<Varta.Store.Client.Pages.Admin.Dialogs.ServerDialog>("Edit Server", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadServers();
        }
    }

    private async Task DeleteServer(ServerTag server)
    {
        bool? result = await DialogService.ShowMessageBox(
            "Delete Server", 
            $"Are you sure you want to delete '{server.Name}'?", 
            yesText: "Delete", cancelText: "Cancel");

        if (result == true)
        {
            try
            {
                var response = await Http.DeleteAsync($"api/servertags/{server.Id}");
                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add("Server deleted successfully", Severity.Success);
                    await LoadServers();
                }
                else
                {
                     Snackbar.Add("Failed to delete server", Severity.Error);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error deleting server: {ex.Message}", Severity.Error);
            }
        }
    }
}
