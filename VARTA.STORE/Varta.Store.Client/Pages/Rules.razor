@page "/rules"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]


@inject IStringLocalizer<App> Localizer

<PageTitle>@Localizer["Rules_Title"] - VARTA</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mb-16 animate-fade-in" Style="padding-top: 100px;">

    <div class="d-flex flex-column align-center mb-8">
        <MudIcon Icon="@Icons.Material.Filled.Gavel" Size="Size.Large" Color="Color.Warning" Class="mb-4 icon-glow" />
        <MudText Typo="Typo.h3" Align="Align.Center"
            Style="font-weight: 900; text-transform: uppercase; letter-spacing: 2px;">
            @Localizer["Rules_Title"]
        </MudText>
        <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mud-text-secondary mt-2">
            @Localizer["Rules_Subtitle"]
        </MudText>
    </div>

    <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Class="mb-8 rounded-lg"
        Icon="@Icons.Material.Filled.Videocam">
        <MudText Typo="Typo.subtitle2" Style="font-weight: bold;">@Localizer["Rules_Alert_Title"]</MudText>
        <MudText Typo="Typo.body2">
            @Localizer["Rules_Alert_Body"]
        </MudText>
    </MudAlert>

    <MudExpansionPanels MultiExpansion="true" Class="rules-accordion">

        <MudExpansionPanel Text="@Localizer["Rules_Section_General"]" Expanded="true">
            <TitleContent>
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Info" Class="mr-3" />
                    <MudText Style="font-weight:bold; font-size: 1.1rem;">@Localizer["Rules_Section_General"]</MudText>
                </div>
            </TitleContent>
            <ChildContent>
                <MudList T="string" Dense="true" Class="rule-list">
                    <MudListItem>
                        <MudText><b>1.1.</b> @Localizer["Rule_Gen_1_1"] <span
                                class="punishment">@Localizer["Punishment_Ban7Permanent"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.2.</b> @Localizer["Rule_Gen_1_2"] <span
                                class="punishment">@Localizer["Punishment_Ban7Permanent"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.3.</b> @Localizer["Rule_Gen_1_3"] <span
                                class="punishment">@Localizer["Punishment_WarningBanPermanent"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.4.</b> @Localizer["Rule_Gen_1_4"] <span
                                class="punishment">@Localizer["Punishment_DeleteAllTransport"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.5.</b> @Localizer["Rule_Gen_1_5"] <span
                                class="punishment">@Localizer["Punishment_WarningBan24h"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.6.</b> @Localizer["Rule_Gen_1_6"] <span
                                class="punishment">@Localizer["Punishment_Ban1to7Days"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.7.</b> @Localizer["Rule_Gen_1_7"] <span
                                class="punishment">@Localizer["Punishment_Ban1to7Days"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.8.</b> @Localizer["Rule_Gen_1_8"] <span
                                class="punishment">@Localizer["Punishment_Ban1to7Days"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.9.</b> @Localizer["Rule_Gen_1_9"] <span
                                class="punishment">@Localizer["Rule_Gen_1_9_Punishment"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>1.10.</b> @Localizer["Rule_Gen_1_10"]</MudText>
                    </MudListItem>
                </MudList>
            </ChildContent>
        </MudExpansionPanel>

        <MudExpansionPanel Text="@Localizer["Rules_Section_Construction"]">
            <TitleContent>
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.HomeWork" Color="Color.Success" Class="mr-3" />
                    <MudText Style="font-weight:bold; font-size: 1.1rem;">@Localizer["Rules_Section_Construction"]
                    </MudText>
                </div>
            </TitleContent>
            <ChildContent>
                <MudList T="string" Dense="true" Class="rule-list">
                    <MudListItem>
                        <MudText><b>2.1.</b> @Localizer["Rule_Const_2_1"] <span
                                class="punishment">@Localizer["Punishment_Demolition"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.2.</b> @Localizer["Rule_Const_2_2"] <MudLink Href="https://ibb.co/6cXw2KCd"
                                Target="_blank" Color="Color.Warning">@Localizer["Rule_Const_MapLink"]</MudLink>. <span
                                class="punishment">@Localizer["Punishment_DemolitionNoWarning"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.3.</b> @Localizer["Rule_Const_2_3"] <span
                                class="punishment">@Localizer["Punishment_Ban24h"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.4.</b> @Localizer["Rule_Const_2_4"] <span
                                class="punishment">@Localizer["Punishment_Demolition"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.5.</b> @Localizer["Rule_Const_2_5"] <span
                                class="punishment">@Localizer["Punishment_Demolition"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.6.</b> @Localizer["Rule_Const_2_6"] <span
                                class="punishment">@Localizer["Punishment_Demolition"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.7.</b> @Localizer["Rule_Const_2_7"] <span
                                class="punishment">@Localizer["Punishment_Demolition"]</span></MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.8.</b> @Localizer["Rule_Const_2_8"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.9.</b> @Localizer["Rule_Const_2_9"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>2.10.</b> @Localizer["Rule_Const_2_10"] <span
                                class="punishment">@Localizer["Punishment_Ban24h"]</span></MudText>
                    </MudListItem>
                </MudList>
            </ChildContent>
        </MudExpansionPanel>

        <MudExpansionPanel Text="@Localizer["Rules_Section_Raid"]">
            <TitleContent>
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.LocalFireDepartment" Color="Color.Error" Class="mr-3" />
                    <MudText Style="font-weight:bold; font-size: 1.1rem;">@Localizer["Rules_Section_Raid"]</MudText>
                </div>
            </TitleContent>
            <ChildContent>
                <MudList T="string" Dense="true" Class="rule-list">
                    <MudListItem>
                        <MudText><b>3.1.</b> @Localizer["Rule_Raid_3_1"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>3.2.</b> @Localizer["Rule_Raid_3_2"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>3.3.</b> @Localizer["Rule_Raid_3_3"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>3.4.</b> @Localizer["Rule_Raid_3_4"]</MudText>
                    </MudListItem>
                    <MudListItem>
                        <MudText><b>3.5.</b> <span
                                style="color:#ff9800; font-weight:bold;">@Localizer["Rule_Raid_3_5_Label"]</span>
                            @Localizer["Rule_Raid_3_5"]</MudText>
                    </MudListItem>
                </MudList>
            </ChildContent>
        </MudExpansionPanel>

    </MudExpansionPanels>

    <div class="d-flex justify-center mt-8 gap-4 flex-wrap">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="https://discord.gg/mkQbaxmuUS"
            Target="_blank" StartIcon="@Icons.Custom.Brands.Discord">
            @Localizer["Support_Discord_Btn"]
        </MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Warning" Size="Size.Large" Href="/support">
            @Localizer["Support_Title"]
        </MudButton>
    </div>

    <MudText Typo="Typo.caption" Align="Align.Center" Class="mud-text-secondary mt-8 d-block">
        @Localizer["Rules_Footer"]
    </MudText>

</MudContainer>

<style>
    .rules-accordion .mud-expand-panel {
        background-color: #1e1e2d;
        border: 1px solid #333;
        margin-bottom: 12px;
        border-radius: 8px !important;
        transition: border-color 0.3s;
    }

    .rules-accordion .mud-expand-panel-header {
        font-size: 1.1rem;
        padding: 16px 24px;
    }

    .rules-accordion .mud-expand-panel:hover {
        border-color: #ff9800;
    }

    .rule-list .mud-list-item {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding: 12px 0;
    }

    .punishment {
        color: #ff5252;
        /* Red color for punishments */
        font-weight: bold;
        font-size: 0.9em;
        margin-left: 6px;
    }

    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>